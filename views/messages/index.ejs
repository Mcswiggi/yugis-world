Battle Board
<a href="/messages/new">Add a message</a>




<form action="/messages" method="POST">
   <input type="text" name="title"> post title
   <input class="form-control" rows="3" type="text" name="content"> post comment</input>
   <button>Submit</button>
   </form>


<% messages.forEach(function(message) { %>
  
   <div class="card">
      <div class="card-header">
         <a href="/messages/<%= message._id %>"> <%= message.title %> </a>
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p><%= message.content %></p>
          <footer class="blockquote-footer"><%= message.author.name %></footer>
        <a href="/messages/<%= message._id %>"><button>reply to post</button></a>
         </blockquote>
      </div>
    </div>
 
<% }) %> 

