<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<style>
  h2, label, h4{
    color: white;
  }
  
  #submitButton{
    margin: 20px 0 25px;
  }
</style>

<main>
  
  <form 
    class="container d-flex flex-column align-items-center"
    action="/messages/<%= message._id %>?_method=PUT"
    method="POST"
  >
    <div class="mb-3 w-75">
      <label for="name-input" class="form-label">Message Title</label>
      <input 
        type="text"
        class="form-control"
        id="name-input"
        name="title"
        value="<%= message.title %>"
      >
    <div class="mb-3 w-75">
      <label for="name-input" class="form-label">Reply</label>
      <input 
        type="text"
        class="form-control"
        id="name-input"
        name="content"
        value="<%= message.content %>"
      >
    </div>
    <button id="submitButton" type="submit" class="btn btn-primary">Submit</button>
  </form>

  <% message.replies.forEach(function(reply) { %>
  
    <div class="card">
       <div class="card-header">
        <%= reply.content %> 
       </div>
       <div class="card-body">
         <blockquote class="blockquote mb-0">
           <p><%= reply.content %></p>
           <br>
           <footer class="blockquote-footer"><%= reply.author.name %></footer>
         <a href="/messages/<%= message._id %>"><button>reply to post</button></a>
         
       </main>
          </blockquote>
       </div>
     </div>
  
 <% }) %> 

  

<%- include('../partials/footer') %>